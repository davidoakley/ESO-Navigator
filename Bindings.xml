<Bindings>
	<Layer name="SI_KEYBINDINGS_LAYER_GENERAL">
		<Category name="Navigator">
			<Action name="NAVIGATOR_SEARCH" rebindable="true">
				<Down>Navigator.showSearch()</Down>
			</Action>
		</Category>
	</Layer>
	<Layer name="SI_KEYBINDINGS_LAYER_USER_INTERFACE_SHORTCUTS">
		<Category name="Navigator">
			<Action name="NAVIGATOR_FOCUSSEARCH" rebindable="true">
				<Down>
					Navigator:OnFocusSearchPressed(true)
				</Down>
				<Up>
					Navigator:OnFocusSearchPressed(false)
				</Up>
			</Action>
		</Category>
	</Layer>
</Bindings>